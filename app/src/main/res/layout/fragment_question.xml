<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.imaginet.ventures.step.fragment.QuestionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemQuestionDetailQuestionMainTextTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_google_plus"
            android:padding="15dp"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemQuestionDetailQuestionNumberTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Question 1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/itemQuestionDetailQuestionPositionLinearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/itemQuestionDetailTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="3dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"

                            android:text="Question"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/itemQuestionDetail1TextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="5dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:text="Question"
                            android:textSize="12sp" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>


                <RadioGroup
                    android:id="@+id/itemQuestionDetailRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail1RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail1RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail2RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail2RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail3RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail3RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail4RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail4RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail5RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail5RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail6RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail6RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail7RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail7RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/itemQuestionDetail8RadioButtonCardView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:visibility="gone">

                        <RadioButton
                            android:id="@+id/itemQuestionDetail8RadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:button="@null"
                            android:drawableEnd="@drawable/question_check_box_drawable"
                            android:paddingBottom="10dp"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:paddingTop="10dp"
                            android:textColor="@drawable/question_radio_button_text_apperance" />
                    </android.support.v7.widget.CardView>

                </RadioGroup>

                <android.support.v7.widget.CardView
                    android:id="@+id/itemQuestionDetailEditTextCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="1dp"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/itemQuestionDetailEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/edit_text_bg_grey"
                        android:cursorVisible="true"
                        android:focusable="false"
                        android:gravity="top"
                        android:hint="Enter your answer here"
                        android:inputType="textMultiLine"

                        android:minLines="4"
                        android:padding="5dp"
                        android:textSize="14sp" />

                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="10dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
